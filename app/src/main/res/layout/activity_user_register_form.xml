<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    tools:context=".UserForm">

    <TextView
        android:id="@+id/textSignupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/celeste"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Registrar usuario" />

    <LinearLayout
        android:id="@+id/linearUserRegisterEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mora"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textSignupTitle">

        <TextView
            android:id="@+id/registerEmail"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textSignupTitle"
            android:text="Correo" />

        <EditText
            android:id="@+id/editTextUserRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUserRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mora"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserRegisterEmail">

        <TextView
            android:id="@+id/registerPassword"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="ContraseÃ±a" />

        <EditText
            android:id="@+id/editTextUserRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUserRegisterDNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mora"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserRegisterPassword">

        <TextView
            android:id="@+id/registerDNI"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="DNI" />

        <EditText
            android:id="@+id/editTextUserRegisterDNI"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUserRegisterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mora"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserRegisterDNI">

        <TextView
            android:id="@+id/userRegisterName"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Nombres" />

        <EditText
            android:id="@+id/editTextUserRegisterName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearUserRegisterFatherLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mora"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserRegisterName">

        <TextView
            android:id="@+id/userRegisterFatherLastName"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Apellido paterno" />

        <EditText
            android:id="@+id/editTextUserRegisterFatherLastName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUserRegisterMotherLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mora"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserRegisterFatherLastName">

        <TextView
            android:id="@+id/userMotherLastName"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Apellido materno" />


        <EditText
            android:id="@+id/editTextUserRegisterMotherLastName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUserRegisterBirthdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mora"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserRegisterMotherLastName">

        <TextView
            android:id="@+id/userRegisterBirthdate"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Fecha de nacimiento" />

        <EditText
            android:id="@+id/editTextUserRegisterBirthdate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="date"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonFormEditUserRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/mora"
        android:text="SIGNUP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearUserRegisterBirthdate" />

</androidx.constraintlayout.widget.ConstraintLayout>