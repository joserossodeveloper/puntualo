<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    tools:context=".UserForm">

    <TextView
        android:id="@+id/textEditTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/celeste"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Editar perfil" />

    <LinearLayout
        android:id="@+id/linearUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/azul_claro"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textEditTitle">

        <TextView
            android:id="@+id/email"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textUserType"
            android:text="Correo" />

        <EditText
            android:id="@+id/editTextUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUserDNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/azul_claro"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserEmail">

        <TextView
            android:id="@+id/dni"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="DNI" />

        <EditText
            android:id="@+id/editTextUserDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:enabled="false"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mora"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserDNI">

        <TextView
            android:id="@+id/userName"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Nombres" />

        <EditText
            android:id="@+id/editTextUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearUserFatherLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mora"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserName">

        <TextView
            android:id="@+id/userFatherLastName"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Apellido paterno" />

        <EditText
            android:id="@+id/editTextUserFatherLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUserMotherLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mora"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserFatherLastName">

        <TextView
            android:id="@+id/userMotherLastName"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Apellido materno" />


        <EditText
            android:id="@+id/editTextUserMotherLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUserBirthdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/azul_claro"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearUserMotherLastName">

        <TextView
            android:id="@+id/userBirthdate"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Fecha de nacimiento" />

        <EditText
            android:id="@+id/editTextUserBirthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:enabled="false"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="406dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonFormEditUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/mora"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearUserBirthdate" />

</androidx.constraintlayout.widget.ConstraintLayout>